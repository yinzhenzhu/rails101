<div class="group">
  <% if current_user && current_user == @group.user %>
  <%= link_to("Write a post", new_group_post_path(@group), class: "btn btn-default pull-right")%>
  <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
  <% end %>
</div>
 <h2><%= @group.title %></h2>
 <p><%= @group.description %></p>
 <table class="table">
   <thead>
     <tr>
       <th>文章内容</th>
       <th>发表者</th>
       <th>发表时间</th>
     </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.content %></td>
         <td><%= post.user.email %></td>
         <td><%= post.created_at %></td>
         <td>
           <% if current_user && current_user == @group.user %>
         <%= link_to("Edit", edit_group_post_path(@group), class: "btn btn-sm btn-default") %>
         <%= link_to("Delete", group_post_path(@group),    class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?" } )%>
          <% end %>
         </td>
       </tr>
       <% end %>
     </tbody>
     </table>
     <div class="text-center">
       <%= will_paginate @posts %>
     </div>
